# Tuya IoT Platform credentials
TUYA_ACCESS_ID=your_tuya_access_id
TUYA_ACCESS_SECRET=your_tuya_access_secret
TUYA_REGION=eu

# Backend server
SERVER_PORT=3001
DB_PATH=/app/data/smart-home.db

# Roborock vacuum
ROBOROCK_DEVICE_NAME=Vacuum
ROBOROCK_DEVICE_ID=your_device_duid
ROBOROCK_PORT=3002

# Roborock cloud credentials (from ~/.roborock after CLI login)
ROBOROCK_RRIOT_U=your_rriot_u
ROBOROCK_RRIOT_S=your_rriot_s
ROBOROCK_RRIOT_H=your_rriot_h
ROBOROCK_RRIOT_K=your_rriot_k
ROBOROCK_RRIOT_REGION=EU
ROBOROCK_RRIOT_API=https://api-eu.roborock.com
ROBOROCK_RRIOT_MQTT=ssl://mqtt-eu.roborock.com:8883
ROBOROCK_USER_UID=0
ROBOROCK_USER_TOKEN=your_token
ROBOROCK_USER_RRUID=your_rruid
ROBOROCK_USER_EMAIL=your_email
